<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="municipio_form_view" model="ir.ui.view">
            <field name="name">municipio.form</field>
            <field name="model">municipio</field>
            <field name="arch" type="xml">
                <form string="codigo_mun">
                    <sheet>
                        <group>
                            <group>
                                <field name="departamento_id"  options="{'no_open':true,'no_quick_create':true,'no_create_edit':true,'no_create':true}" />
                            </group>
                            <group>
                                <field name="codigo_mun"  />
                            </group>
                            <group>
                                <field name="nombre_mun"  />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="municipio_tree_view" model="ir.ui.view">
            <field name="name">municipio.tree</field>
            <field name="model">municipio</field>
            <field name="arch" type="xml">
                <tree string="municipio">
                    <field name="departamento_id"/>
                    <field name="codigo_mun"/>
                    <field name="nombre_mun"/>
                </tree>
            </field>
        </record>

        <record id="municipio_action_view" model="ir.actions.act_window">
            <field name="name">Municipio</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">municipio</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    click here to add new municipio.
                </p>
            </field>
        </record>
        <menuitem
                name="Municipio"
                id="municipio1"
                parent="generales_item"
                action="municipio_action_view"/>
    </data>
</odoo>