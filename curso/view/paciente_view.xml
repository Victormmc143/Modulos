<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paciente_form_view" model="ir.ui.view">
            <field name="name">paciente.form</field>
            <field name="model">paciente</field>
            <field name="arch" type="xml">
                <form string="documento">
                    <sheet>
                        <group>
                            <group>
                                <field name="tipo_documentos"  />
                            </group>
                            <group>
                                <field name="documento"  />
                            </group>
                            <group>
                                <field name="nom1"/>
                            </group>
                            <group>
                                <field name="nom2"/>
                            </group>
                            <group>
                                <field name="ape1"/>
                            </group>
                            <group>
                                <field name="ape2"/>
                            </group>
                            <group>
                                <field name="fecha_nacimiento"/>
                            </group>
                            <group>
                                <field name="edad"/>
                            </group>
                            <group>
                                <field name="sex"/>
                            </group>
                            <group> <field name="correo"/></group>
                            <group>
                                <field name="departamento_id"/>
                            </group>
                            <group>
                                <field name="municipio_id"  />
                            </group>
                        </group>
                        <group>
                                <field name="nom_completo"/>
                        </group>
                        <notebook>
                            <page name="Relacion De Telefono Paciente" string="Listado De Telefono Paciente">
                                <field name="telefono_ids">
                                    <tree editable="bottom">
                                        <field name="num_telefono"/>
                                        <field name="tel_principal"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="Relacion De Direccion Paciente" string="Listado De Direccion Paciente">
                                <field name="direccion_ids">
                                    <tree editable="bottom">
                                        <field name="dir"/>
                                        <field name="bar"/>
                                        <field name="dir_principal"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="telefono_ids_view_tree" model="ir.ui.view">
            <field name="name">telefono_ids_view_tree</field>
            <field name="model">paciente.telefono</field>
            <field name="arch" type="xml">
                <tree string="paciente_telefono_tree" editable="bottom">
                    <field name="num_telefono"/>
                    <field name="tel_principal"/>
                </tree>
            </field>
        </record>
        <record id="telefono_ids_view_actions" model="ir.actions.act_window">
            <field name="name">telefono.ids.view.actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paciente.telefono</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="direccion_ids_view_tree" model="ir.ui.view">
            <field name="name">direccion_ids_view_tree</field>
            <field name="model">paciente.direccion</field>
            <field name="arch" type="xml">
                <tree string="paciente_direccion_tree" editable="bottom">
                    <field name="dir"/>
                    <field name="bar"/>
                    <field name="dir_principal"/>
                </tree>
            </field>
        </record>
        <record id="direccion_ids_view_actions" model="ir.actions.act_window">
            <field name="name">direccion.ids.view.actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paciente.direccion</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="paciente_tree_view" model="ir.ui.view">
            <field name="name">paciente.tree</field>
            <field name="model">paciente</field>
            <field name="arch" type="xml">
                <tree string="Paciente">
                    <field name="tipo_documentos"/>
                    <field name="documento"/>
                    <field name="nom1"/>
                    <field name="ape1"/>
                    <field name="ape2"/>
                    <field name="fecha_nacimiento"/>
                    <field name="edad"/>
                    <field name="sex"/>
                    <field name="correo"/>
                    <field name="departamento_id"/>
                    <field name="municipio_id"/>
                </tree>
            </field>
        </record>

        <record id="paciente_action_view" model="ir.actions.act_window">
            <field name="name">Paciente</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paciente</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    click here to add new Paciente.
                </p>
            </field>
        </record>

        <menuitem
                name="Paciente"
                id="paciente1"
                parent="admisiones_item"
                action="paciente_action_view"/>


