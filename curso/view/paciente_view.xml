<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paciente_form_view" model="ir.ui.view">
            <field name="name">paciente.form</field>
            <field name="model">paciente</field>
            <field name="arch" type="xml">
                <form string="Paciente">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Ingresar Nombre"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="edad"/>
                                <field name="sex"/>
                            </group>
                            <group>
                                <field name="fechaNacimiento"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Relacion De Telefono De Paciente" string="Telefono Paciente">
                                <field name="detail_idstel">
                                    <tree>
                                        <field name="detalleTel"/>
                                        <field name="tipTel"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="Relacion De Direccion De Paciente" string="Direccion Paciente">
                                <field name="detail_idsdir">
                                    <tree>
                                        <field name="detalleDir"/>
                                        <field name="tipDir"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="paciente_tree_view" model="ir.ui.view">
            <field name="name">paciente.tree</field>
            <field name="model">paciente</field>
            <field name="arch" type="xml">
                <tree string="Paciente">
                    <field name="name"/>
                    <field name="sex"/>
                    <field name="fechaNacimiento"/>
                    <field name="edad"/>

                </tree>
            </field>
        </record>

        <record id="paciente_action_view" model="ir.actions.act_window">
            <field name="name">Paciente</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paciente</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    click here to add new Paciente.
                </p>
            </field>
        </record>

        <menuitem
                name="Historia Clinica"
                id="paciente_item_menu"
                action="paciente_action_view"/>

        <menuitem
                name="Paciente"
                id="paciente1"
                parent="paciente_item_menu"
                action="paciente_action_view"/>


