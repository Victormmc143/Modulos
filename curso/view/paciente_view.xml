<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paciente_form_view" model="ir.ui.view">
            <field name="name">paciente.form</field>
            <field name="model">paciente</field>
            <field name="arch" type="xml">
                <form string="documento">
                    <sheet>
                        <group>
                            <group>
                                <field name="TipoDocumentos"   modifiers="{'invisible':true,'readonly':true}"/>
                            </group>
                            <group>
                                <field name="documento"  />
                            </group>
                            <group>
                                <field name="nom1"/>
                            </group>
                            <group>
                                <field name="nom2"/>
                            </group>
                            <group>
                                <field name="ape1"/>
                            </group>
                            <group>
                                <field name="ape2"/>
                            </group>
                            <group>
                                <field name="fechaNacimiento"/>
                            </group>
                            <group>
                                <field name="edad"/>
                            </group>
                            <group>
                                <field name="sex"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Relacion De Datos Adicional Paciente" string="Datos Adicional Paciente">
                                <field name="detail_ids">
                                    <tree editable="bottom">
                                        <field name="tipDato"/>
                                        <field name="datos"/>
                                        <field name="estado"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="detail_ids_view_tree" model="ir.ui.view">
            <field name="name">detail_ids_view_tree</field>
            <field name="model">paciente.datos</field>
            <field name="arch" type="xml">
                <tree string="paciente_datos_tree" editable="bottom">
                    <field name="tipDato"/>
                    <field name="datos"/>
                    <field name="estado"/>
                </tree>
            </field>
        </record>
        <record id="detail_ids_view_actions" model="ir.actions.act_window">
            <field name="name">detail.ids.view.actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paciente.datos</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="paciente_tree_view" model="ir.ui.view">
            <field name="name">paciente.tree</field>
            <field name="model">paciente</field>
            <field name="arch" type="xml">
                <tree string="Paciente">
                    <field name="TipoDocumentos"/>
                    <field name="documento"/>
                    <field name="nom1"/>
                    <field name="ape1"/>
                    <field name="ape2"/>
                    <field name="fechaNacimiento"/>
                    <field name="edad"/>
                    <field name="sex"/>
                </tree>
            </field>
        </record>

        <record id="paciente_action_view" model="ir.actions.act_window">
            <field name="name">Paciente</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paciente</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    click here to add new Paciente.
                </p>
            </field>
        </record>

        <menuitem
                name="Historia Clinica"
                id="paciente_item_menu"
                action="paciente_action_view"/>

        <menuitem
                name="Paciente"
                id="paciente1"
                parent="paciente_item_menu"
                action="paciente_action_view"/>


