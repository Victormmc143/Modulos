<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="examen_form_view" model="ir.ui.view">
            <field name="name">examen.form</field>
            <field name="model">examenes</field>
            <field name="arch" type="xml">
                <form string="codigo_examen">
                    <sheet>
                        <group>
                            <group>
                                <field name="codigo_examen"  />
                            </group>
                            <group>
                                <field name="nombre_examen"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="Listado De Tarifa" string="Listado de Tarifa">
                                <field name="tarifa_id">
                                    <tree editable="true">
                                        <field name="tarifa_id" options="{'no_open':true,'no_quick_create':true,'no_create_edit':true,'no_create':true}"/>
                                        <field name="var_examen"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="examen_tree_view" model="ir.ui.view">
            <field name="name">examen.tree</field>
            <field name="model">examenes</field>
            <field name="arch" type="xml">
                <tree string="examen">
                    <field name="codigo_examen"/>
                    <field name="nombre_examen"/>
                </tree>
            </field>
        </record>

        <record id="examen_action_view" model="ir.actions.act_window">
            <field name="name">Examen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">examenes</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    click here to add new examen.
                </p>
            </field>
        </record>
        <menuitem
                name="Examenes"
                id="examen"
                parent="generales_item"
                action="examen_action_view"/>
    </data>
</odoo>