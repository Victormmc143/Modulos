<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tarifa_form_view" model="ir.ui.view">
            <field name="name">tarifa.form</field>
            <field name="model">tarifa</field>
            <field name="arch" type="xml">
                <form string="codigo_tarifa">
                    <sheet>
                        <group>
                            <group>
                                <field name="codigo_tarifa"  />
                                <field name="nombre_tarifa"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="Relacion De Examenes" string="Listado De Examenes">
                                <field name="examenes_ids">
                                    <tree editable="bottom">
                                        <field name="examenes_id"/>
                                        <field name="cod_examen"/>
                                        <field name="var_examen"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tarifa_tree_view" model="ir.ui.view">
            <field name="name">tarifa.tree</field>
            <field name="model">tarifa</field>
            <field name="arch" type="xml">
                <tree string="tarifa">
                    <field name="codigo_tarifa"/>
                    <field name="nombre_tarifa"  />
                </tree>
            </field>
        </record>

        <record id="tarifa_action_view" model="ir.actions.act_window">
            <field name="name">Tarifa</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tarifa</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    click here to add new tarifa.
                </p>
            </field>
        </record>
        <menuitem
                name="Tarifa"
                id="tarifa"
                parent="generales_item"
                action="tarifa_action_view"/>
    </data>
</odoo>